<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GmailApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/gmail_red</item>
        <item name="colorPrimaryDark">@color/gmail_red_dark</item>
        <item name="actionBarStyle">@style/Widget.GmailApp.ActionBar</item>
    </style>

    <style name="Theme.GmailApp" parent="Base.Theme.GmailApp" />

    <style name="Widget.GmailApp.ActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="height">?attr/actionBarSize</item>
        <item name="background">@color/gmail_red</item>
        <item name="titleTextStyle">@style/TextAppearance.GmailApp.ActionBar.Title</item>
    </style>

    <style name="TextAppearance.GmailApp.ActionBar.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>